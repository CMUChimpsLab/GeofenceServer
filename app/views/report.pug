html
    head
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width")
        title=title
        include styles
    body
        div(class="container")
            h1=title

            div(class="nav")
                ul
                    li
                        a(href=routes.INDEX) Main
            
            ul
                li(class="task")
                    h2 Stats
                    p
                        | Total tasks:
                        = " " + tasks.length
                    p
                        | Total users:
                        = " " + users.length
                
                li(class="task")
                    h2 Cost Distribution
                    svg(id="costs" class="costchart")
        
                li(class="task")
                    h2 Space Distribution
                    div(id="map")
                
                li(class="task")
                    h2 Time Distribution
                    p
                        | Number of Tasks Created:
                    svg(id="time" class="timegraph")

        include extscripts
        | <script>
        include ./scripts/costchart.js
        include ./scripts/map.js
        include ./scripts/time.js
        | </script>

        script(async defer src="https://maps.googleapis.com/maps/api/js?key={0}&callback=initMap")
